if has("gui_macvim")
  set guifont=Consolas:h13
  "set transparency=3
  set lines=35
  set columns=120

  let g:NERDMenuMode = 0

  " fullscreen maximizes vertically AND horizontally
  set fuoptions=maxvert

  " Hide toolbar and menus.
  set guioptions-=T 
  set guioptions-=m

  " Scrollbar is always off.
  set guioptions-=rL

  " turn off gui tabs
  set guioptions-=e

  " turn off bell
  set vb
endif
